{% extends 'layout.njk' %}

{% set bodyId = "page-register" %}

{% block content %}
    <div class="container">

        <header>   
                <div class="links">
                <img src="./assets/logo.svg" alt="logo ecoleta">
                <span>
                    <img src="./assets/arrow-left.svg" alt="">
                    <a href="/"> Voltar para home</a>
                </span>
            </div>
        </header>

        <form class="page-register" action="/savepoint" method="POST">
            <div class="card_register">
                <h1>Cadastro ponto de coleta</h1>

                <h2> Dados da entidade </h2>

                <div class="all_items">
                    <div class="item">
                        <div>Nome da entidade</div>
                        <div>
                            <input  
                                type="text"
                                name="name"
                                placeholder="Ex: Ricardo Marinho"
                                required
                            >
                        </div>
                    </div>

                    <div class="item">
                        <div>Imagem</div>
                        <div>
                            <input  
                                type="url"
                                name="image"
                                placeholder="Ex: http://"
                                required
                            >
                        </div>
                    </div>

                        <div class="item">
                            <div>Endereço</div>
                            <div>
                                <input  
                                    type="text"
                                    name="address"
                                    placeholder="Ex: Av. Bartolomeu"
                                    required
                                >
                            </div>
                        </div>

                        <div class="item">
                            <div>Número e Complemento</div>
                            <div>
                                <input  
                                    type="text"
                                    name="address2"
                                    placeholder="Ex: 61"
                                    required
                                >
                            </div>
                        </div>

                        <div class="item">
                            <div>Província</div>
                            <div>
                                <select name="uf" required>
                                    <option value="">Selecione a Província</option>
                                </select>
                                <input 
                                    type="hidden" 
                                    name="state"
                                >
                            </div>
                        </div>

                        <div class="item">
                            <div>Município</div>
                            <div>
                                <select name="city" disabled required>
                                    <option value="">Selecione o Município</option>
                                </select>
                            </div>
                        </div>

                </div>

                <div class="all_items_block">
                
                    <h3>Ítens de coleta</h3>

                    <p>Selecione um ou mais ítens abaixo</p>

                    <section class=cards_items>
                        
                        <div class="card" data-id="Lâmpadas">
                            <img src="assets/lampadas.svg" alt="Lâmpadas">
                            <div>Lâmpadas</div>
                        </div>

                        <div class="card" data-id="Pilhas e Baterias">
                            <img src="assets/baterias.svg" alt="Pilhas e Baterias">
                            <div>Pilhas e Baterias</div>
                        </div>

                        <div class="card" data-id="Papéis e Papelão">
                            <img src="assets/papeis-papelao.svg" alt="Papéis e Papelão">
                            <div>Papéis e Papelão</div>
                        </div>

                        <div class="card" data-id="Resíduos Eletrônicos">
                            <img src="assets/eletronicos.svg" alt="Resíduos Eletrônicos">
                            <div>Resíduos Eletrônicos</div>
                        </div>

                        <div class="card" data-id="Resíduos Organicos">
                            <img src="assets/organicos.svg" alt="Resíduos Organicos">
                            <div>Resíduos Organicos</div>
                        </div>

                        <div class="card" data-id="Óleo de Cozinha">
                            <img src="assets/oleo.svg" alt="Óleo de Cozinha">
                            <div>Óleo de Cozinha</div>
                        </div>

                        <input type="hidden" name="items">
                    </section>
                </div>

                <button type="submit">Cadastro do Ponto de Coleta</button>

            </div>
        </form>
    </div>

    <script src="/scripts.js"></script>
    
    {% if saved %}
        {%include "registered.njk"%}
    {% endif %}
    
{% endblock %}